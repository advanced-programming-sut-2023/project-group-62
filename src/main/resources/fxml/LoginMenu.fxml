<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.group62.veiw.ControllerLoginMenu"
            prefHeight="800.0" prefWidth="1200.0">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <TextField promptText="username" maxWidth="300" fx:id="username"/>
            <PasswordField promptText="password" maxWidth="300" fx:id="password"/>
            <HBox alignment="CENTER" spacing="20">
                <Button text="login" onMouseClicked="#login"/>
                <Button text="back" onMouseClicked="#back"/>
                <Button text="reset" onMouseClicked="#reset"/>
            </HBox>
            <Button text="forgot password" onMouseClicked="#forgotPassword"/>
        </VBox>
    </center>
</BorderPane>
