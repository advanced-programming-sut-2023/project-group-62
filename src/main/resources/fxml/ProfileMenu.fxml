<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.group62.veiw.ControllerProfileMenu"
            prefHeight="800.0" prefWidth="1200.0">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Text text="username is:" fx:id="username"/>
            <Text text="nickname is:" fx:id="nickname"/>
            <Text text="Email is:" fx:id="Email"/>
            <Text text="slogan is:" fx:id="slogan"/>
            <Text text="high score is:" fx:id="highScore"/>
            <Text text="rank is:" fx:id="rank"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="change username" onMouseClicked="#changeUsername"/>
                <Button text="change password" onMouseClicked="#changePassword"/>
                <Button text="change nickname" onMouseClicked="#changeNickname"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="change Email" onMouseClicked="#changeEmail"/>
                <Button text="change slogan" onMouseClicked="#changeSlogan"/>
                <Button text="change avatar" onMouseClicked="#changeAvatar"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
