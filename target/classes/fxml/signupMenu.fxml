<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.group62.veiw.ControllerSignupMenu"
            prefHeight="800.0" prefWidth="1200.0">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <TextField promptText="username" maxWidth="300" fx:id="username" style="-fx-highlight-fill: red"/>
            <HBox alignment="CENTER" spacing="5">
                <PasswordField promptText="password" maxWidth="300" fx:id="password"/>
                <Button text="random" onMouseClicked="#randomPassword"/>
            </HBox>
            <TextField promptText="nickname" maxWidth="300" fx:id="nickname"/>
            <TextField promptText="Email" maxWidth="300" fx:id="Email"/>
            <HBox alignment="CENTER" spacing="5">
                <TextField promptText="slogan" maxWidth="300" fx:id="slogan"/>
                <Button text="random" onMouseClicked="#randomSlogan"/>
            </HBox>
            <Text text="answer one of the security questions below"/>
            <Text text="1.What is your first school's name?"/>
            <Text text="2.What is your favorite car?"/>
            <Text text="3.When is your birthday?"/>
            <TextField promptText="(question number).(answer)" maxWidth="300" fx:id="answer"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="signup" onMouseClicked="#signup"/>
                <Button text="reset" onMouseClicked="#reset"/>
            </HBox>
            <Button text="login menu" onMouseClicked="#loginMenu"/>
            <TextArea text="" fx:id="textArea" maxWidth="500" maxHeight="30"/>

        </VBox>
    </center>
</BorderPane>
